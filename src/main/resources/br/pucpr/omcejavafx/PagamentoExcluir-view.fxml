<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.pucpr.omcejavafx.PaginaExcluirPagamento"
            prefHeight="200.0" prefWidth="400.0">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="Excluir Pagamento" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ID do Pagamento:"/>
            <TextField fx:id="txtId" promptText="Digite o ID para excluir" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Excluir" onAction="#onExcluir"/>
        </HBox>

        <Label fx:id="lblMensagem" style="-fx-text-fill: red;"/>

    </VBox>
</AnchorPane>
