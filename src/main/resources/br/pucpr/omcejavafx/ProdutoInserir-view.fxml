<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.pucpr.omcejavafx.PaginaCadastrarAvaliacaoProduto"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox spacing="10.0" layoutX="150.0" layoutY="50.0">
            <children>
                <Label text="ID do Produto:" />
                <TextField fx:id="txtId" />

                <Label text="Nota (0 a 10):" />
                <TextField fx:id="txtNota" />

                <Label text="Comentário:" />
                <TextArea fx:id="txtComentario" prefRowCount="4" />

                <Button text="Salvar Avaliação" onAction="#onSalvar" />
            </children>
        </VBox>
    </children>
</AnchorPane>
